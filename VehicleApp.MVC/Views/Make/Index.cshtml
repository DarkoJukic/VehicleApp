@model IEnumerable<VehicleApp.Service.ViewModels.ListVehicleMakeViewModel>

@{
    ViewBag.Title = "Makes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of vehicle makes</h2>

<form method="get">
    <div class="input-group">
        <span class="input-group-btn">
            <button class="btn btn-default" type="submit">Search</button>
            <input type="text" class="form-control" name="searchTerm" placeholder="Search by make">
        </span>
    </div>
</form>
<br />
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Abrv)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Abrv)
            </td>
            <td>
                @Html.ActionLink("Models", "Index", "Model", new { Id = item.Id }, null) |
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
