@{
    ViewBag.Title = "Makes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="MakesController">
    <h2>Vehicle Makes</h2>

    <button class="btn btn-primary" uib-tooltip="Create new Make" ng-click="CreateNewMake()">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    </button>
    <br />
    <p>
    </p>
    <table class="table">
        <tr>
            <th>
                Make
            </th>
            <th>
                Abrv
            </th>
            <th>
            </th>
        </tr>
        <tr ng-repeat="make in makes">
            <td>
                {{make.Name}}
            </td>
            <td>
                {{make.Abrv}}
            </td>
            <td>
                <button class="btn btn-xs btn-primary" uib-tooltip="Edit {{make.Name}}">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </button>
                <button class="btn btn-xs btn-danger" uib-tooltip="Delete {{make.Name}}">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </button>
        </tr>
    </table>
</div>
